-- Dumping database structure for news_data
CREATE DATABASE IF NOT EXISTS `news_data` /*!40100 DEFAULT CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci */;
USE `news_data`;

-- Dumping structure for table news_data.bongda
CREATE TABLE IF NOT EXISTS `bongda` (
  `id` int(10) NOT NULL AUTO_INCREMENT,
  `name` varchar(300) CHARACTER SET utf8 COLLATE utf8_vietnamese_ci DEFAULT NULL,
  `time` varchar(300) CHARACTER SET utf8 COLLATE utf8_vietnamese_ci DEFAULT NULL,
  `author` varchar(300) CHARACTER SET utf8 COLLATE utf8_vietnamese_ci DEFAULT NULL,
  `content1` mediumtext CHARACTER SET utf8 COLLATE utf8_vietnamese_ci,
  `content2` mediumtext CHARACTER SET utf8 COLLATE utf8_vietnamese_ci,
  `content3` mediumtext CHARACTER SET utf8 COLLATE utf8_vietnamese_ci,
  `content4` mediumtext CHARACTER SET utf8 COLLATE utf8_vietnamese_ci,
  `content5` mediumtext CHARACTER SET utf8 COLLATE utf8_vietnamese_ci,
  `image1` varchar(300) CHARACTER SET utf8 COLLATE utf8_vietnamese_ci DEFAULT NULL,
  `image2` varchar(300) CHARACTER SET utf8 COLLATE utf8_vietnamese_ci DEFAULT NULL,
  `hot` enum('Y','N') CHARACTER SET utf8 COLLATE utf8_vietnamese_ci DEFAULT 'N',
  `type` char(50) CHARACTER SET utf8 COLLATE utf8_vietnamese_ci DEFAULT 'bongda',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=14 DEFAULT CHARSET=utf8 COLLATE=utf8_vietnamese_ci COMMENT='các bài tin về bóng đá';

-- Dumping data for table news_data.bongda: ~9 rows (approximately)
/*!40000 ALTER TABLE `bongda` DISABLE KEYS */;
