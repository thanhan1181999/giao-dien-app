        /*---*/
        
        .section {
            padding: 50px 0;
        }
        /*------------NAV------*/
        
        #navigation {
            background-color: rgb(90, 70, 70);
            padding: 20px 10px;
            z-index: 100;
            width: 100%;
        }
        
        #navigation li {
            padding: 0 10px;
        }
        
        #navigation li:hover {
            background-color: rgb(224, 129, 129);
        }
        
        #navigation li a {
            color: #fff;
        }
        
        .navbar-brand,
        .navbar-brand:hover {
            color: #fff;
        }
        
        .navbar-toggler-icon {
            background: url(../anh/icon/menu.png)!important;
            background-size: 100%!important;
        }
        
        .fixedNav #navigation {
            position: fixed!important;
            top: 0;
        }
        
        .trangchu,
        .bongda {
            text-decoration: none;
            color: #378b36;
            font-size: 17px;
            margin-right: 0;
            padding-right: 10px;
            padding-left: 10px;
            -webkit-animation: trangchu 1s infinite;
        }
        
        @-webkit-keyframes trangchu {
            0% {
                color: aqua
            }
            25% {
                color: rgb(219, 31, 31)
            }
            50% {
                color: rgb(88, 34, 214)
            }
            75% {
                color: rgb(225, 240, 14)
            }
        }
        
        #list_phia_duoi_phan_tin>ul {
            list-style: none!important;
            font-size: 13px!important;
            float: left!important;
            margin-left: 0!important;
            width: 100%!important;
            padding-inline-start: 0!important;
        }
        
        #list_phia_duoi_phan_tin>ul>li {
            display: inline!important;
            float: left!important;
            background-color: #e1e1e1!important;
            margin-right: 2px!important;
            padding: 3px 5px!important;
        }
        
        #list_phia_duoi_phan_tin>ul>li:hover {
            background-color: red!important;
        }
